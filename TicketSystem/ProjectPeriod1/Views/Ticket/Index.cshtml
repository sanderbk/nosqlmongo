@{
    ViewData["Title"] = "Dashboard";
}
@model IEnumerable<ProjectPeriod1.Models.Ticket>
<link href="~/css/graph.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-sm text-center">
            <h2 class="">Current Incidents</h2>
        </div>
        <div class="col-sm text-center">
            <button class="btn btn-primary" asp-controller="Ticket"                                           asp-action="Index">Show List</button>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm text-center">

            <div class="single-chart">
                <svg viewBox="0 0 36 36" class="circular-chart orange">
                    <path class="circle-bg"
                          d="M18 2.0845
          a 15.9155 15.9155 0 0 1 0 31.831
          a 15.9155 15.9155 0 0 1 0 -31.831" />
                    <path class="circle"
                          stroke-dasharray="50 , 100"
                          d="M18 2.0845
          a 15.9155 15.9155 0 0 1 0 31.831
          a 15.9155 15.9155 0 0 1 0 -31.831" />
                    <text x="18" y="20.35" class="percentage">2/@Model.Count()</text>
                </svg>
            </div>
        </div>



        <div class="col-sm text-center">

            <div class="single-chart">
                <svg viewBox="0 0 36 36" class="circular-chart green">
                    <path class="circle-bg"
                          d="M18 2.0845
          a 15.9155 15.9155 0 0 1 0 31.831
          a 15.9155 15.9155 0 0 1 0 -31.831" />
                    <path class="circle"
                          stroke-dasharray="60, 100"
                          d="M18 2.0845
          a 15.9155 15.9155 0 0 1 0 31.831
          a 15.9155 15.9155 0 0 1 0 -31.831" />
                    <text x="18" y="20.35" class="percentage">60%</text>
                </svg>
            </div>

        </div>
    </div>
</div>